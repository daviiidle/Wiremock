{
  "priority": 5,
  "request": {
    "method": "POST",
    "urlPath": "/loans",
    "headers": {
      "Authorization": {
        "matches": "Bearer .*"
      },
      "Content-Type": {
        "contains": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.customerId"
      },
      {
        "matchesJsonPath": "$.amount"
      },
      {
        "matchesJsonPath": "$.termMonths"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json",
      "X-Correlation-Id": "{{request.headers.X-Correlation-Id}}"
    },
    "jsonBody": {
      "loanId": "LOAN{{randomValue length=6 type='NUMERIC'}}",
      "customerId": "{{jsonPath request.body '$.customerId'}}",
      "amount": "{{jsonPath request.body '$.amount'}}",
      "loanType": "{{jsonPath request.body '$.loanType'}}",
      "interestRate": "{{jsonPath request.body '$.interestRate'}}",
      "term": "{{jsonPath request.body '$.termMonths'}}",
      "termMonths": "{{jsonPath request.body '$.termMonths'}}",
      "repaymentFrequency": "monthly",
      "nextPaymentDate": "{{now offset='+30 days' format='yyyy-MM-dd'}}",
      "createdAt": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
    },
    "transformers": ["response-template"]
  }
}