{
  "request": {
    "method": "GET",
    "urlPattern": "/loans/unknown.*"
  },
  "response": {
    "status": 404,
    "headers": {
      "Content-Type": "application/json",
      "X-Correlation-Id": "{{request.headers.X-Correlation-Id}}"
    },
    "jsonBody": {
      "error": "Loan not found",
      "code": "LOAN_NOT_FOUND",
      "timestamp": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
    },
    "transformers": ["response-template"]
  }
}