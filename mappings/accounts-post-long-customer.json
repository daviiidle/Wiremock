{
  "priority": 3,
  "request": {
    "method": "POST",
    "urlPath": "/accounts",
    "headers": {
      "Authorization": {
        "matches": "Bearer .*"
      },
      "Content-Type": {
        "contains": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "equalToJson": {
          "customerId": "VERYLONGCUSTOMERID123456789",
          "accountType": "SAVINGS",
          "currency": "AUD",
          "initialBalance": 1000
        }
      }
    ]
  },
  "response": {
    "status": 400,
    "headers": {
      "Content-Type": "application/json",
      "X-Correlation-Id": "{{request.headers.X-Correlation-Id}}"
    },
    "jsonBody": {
      "error": "Bad Request",
      "code": "VALIDATION_ERROR",
      "message": "Customer ID exceeds maximum length of 20 characters",
      "timestamp": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
    },
    "transformers": ["response-template"]
  }
}