{
  "request": {
    "method": "GET",
    "urlPattern": "/bookings/([a-zA-Z0-9]+)",
    "headers": {
      "Authorization": {
        "matches": "Bearer .*"
      }
    }
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json",
      "X-Correlation-Id": "{{request.headers.X-Correlation-Id}}"
    },
    "jsonBody": {
      "bookingId": "{{request.pathSegments.[1]}}",
      "customerId": "CUST001",
      "productType": "CONSULTATION",
      "productId": "PROD123456",
      "bookingDate": "{{now offset='+7 days' format='yyyy-MM-dd'}}",
      "bookingTime": "10:00",
      "status": "active",
      "branch": "Melbourne CBD",
      "createdAt": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
    },
    "transformers": ["response-template"]
  }
}