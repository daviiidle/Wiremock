{
  "request": {
    "method": "POST",
    "urlPath": "/loans",
    "headers": {
      "Content-Type": {
        "contains": "application/json"
      },
      "Authorization": {
        "equalTo": "Bearer banking-api-key-2024"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.customerId"
      },
      {
        "matchesJsonPath": "$.principal"
      },
      {
        "matchesJsonPath": "$.termMonths"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json",
      "X-Correlation-Id": "{{request.headers.X-Correlation-Id}}"
    },
    "jsonBody": {
      "loanId": "LOAN{{randomValue length=6 type='NUMERIC'}}",
      "customerId": "{{jsonPath request.body '$.customerId'}}",
      "principal": "{{jsonPath request.body '$.principal'}}",
      "interestRate": "{{#if (jsonPath request.body '$.interestRate')}}{{jsonPath request.body '$.interestRate'}}{{else}}{{randomValue type='DECIMAL' min=3.50 max=15.99}}{{/if}}",
      "term": "{{jsonPath request.body '$.termMonths'}}",
      "termMonths": "{{jsonPath request.body '$.termMonths'}}",
      "repaymentFrequency": "{{#if (jsonPath request.body '$.repaymentFrequency')}}{{jsonPath request.body '$.repaymentFrequency'}}{{else}}monthly{{/if}}",
      "nextPaymentDate": "{{now offset='+30 days' format='yyyy-MM-dd'}}",
      "createdAt": "{{now format='yyyy-MM-dd HH:mm:ss'}}"
    },
    "transformers": ["response-template"]
  }
}